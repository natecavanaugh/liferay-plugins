#set ($content_id = $reserved-article-id.data)
#set ($background_color = "")
#set ($background_padding = "")
#set ($message_color = "")
#set ($message_font_weight = "")
#set ($secondary_message_color = "")
#set ($secondary_message_font_weight = "")
#set ($text_align = "")

#if (!$banner_background_color.data.isEmpty())
	#set ($background_color = "background-color:${banner_background_color.data};")
#end

#if (!$banner_background_padding.data.isEmpty())
	#set ($background_padding = "padding:${banner_background_padding.data};")
#end

#if (!$banner_message_alignment.data.isEmpty())
	#set ($text_align = "text-align:${banner_message_alignment.data};")
#end

#if (!$banner_message_color.data.isEmpty())
	#set ($message_color = "color:${banner_message_color.data};")
#end

#if (!$banner_message_font_weight.data.isEmpty())
	#set ($message_font_weight = "font-weight:${banner_message_font_weight.data};")
#end

#if (!$banner_secondary_message_color.data.isEmpty())
	#set ($secondary_message_color = "color:${banner_secondary_message_color.data};")
#end

#if (!$banner_secondary_message_font_weight.data.isEmpty())
	#set ($secondary_message_font_weight = "font-weight:${banner_secondary_message_font_weight.data};")
#end

<div class="banner" id="banner${content_id}" style="${background_color}${background_padding}">
	<div class="banner-message" style="${text_align}">
		<h2 style="${message_color}${message_font_weight}">$banner_message.data</h2>

		#if (!$banner_secondary_message.data.isEmpty())
			<p class="banner-message-secondary" style="${secondary_message_color}${secondary_message_font_weight}">$banner_secondary_message.data</p>
		#end
	</div>

	#if (!$banner_button_text.data.isEmpty())
		<div class="banner-button">
			<a class="banner-link $banner_button_text.banner_button_style.data $banner_button_text.banner_button_size.data" href="$banner_button_text.banner_button_link.data">$banner_button_text.data</a>
		</div>
	#end
</div>
